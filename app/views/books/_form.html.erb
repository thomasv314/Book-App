<%= semantic_form_for @book do |f| %>
  <%= f.inputs do %>
    <%= f.input :isbn %>
    <%= f.input :title %>
    <%= f.input :subject %>
    <%= f.input :authors %>
    <%= f.input :price %>
    <%= f.input :stock %>
    <%= f.input :publisher %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
